# StudyBuddy Environment Variables Template
# Copy this file to .env and fill in your actual values

# --- Database Configuration ---
# For local development (SQLite):
# DATABASE_URL="sqlite:///./studybuddy.db"

# For production (Neon Database - recommended):
# Get your connection string from: https://console.neon.tech
DATABASE_URL="postgresql://username:password@ep-your-endpoint.region.aws.neon.tech/studybuddy?sslmode=require"

# --- LLM API Keys ---
GEMINI_API_KEY="your_gemini_api_key_here"
GROQ_API_KEY="your_groq_api_key_here"
TAVILY_API_KEY="your_tavily_api_key_here"

# --- JWT Security ---
# Generate a secret key by running this command in your terminal:
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY="your_super_secret_key_goes_here"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
